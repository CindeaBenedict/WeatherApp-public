@page
@model WeatherApp.Pages.Account.AccountModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account - WeatherApp</title>
    <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">
    <!-- Header -->
    @await Html.PartialAsync("_Header")

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
        <div class="w-full max-w-lg mx-auto bg-white shadow-lg rounded-lg p-6">
            <h1 class="text-2xl font-bold text-purple-600 mb-6 text-center">Your Account</h1>
            <div class="space-y-4">
                <p class="text-gray-700">
                    <strong>Username:</strong> @Model.UserName
                </p>
                <p class="text-gray-700">
                    <strong>Email:</strong> @Model.Email
                </p>
                <div>
                    <h2 class="text-lg font-semibold text-gray-800 mb-2">Favorite Locations</h2>
                    @if (Model.FavoriteLocations != null && Model.FavoriteLocations.Any())
                    {
                        <ul class="list-disc pl-6 space-y-2 text-gray-700">
                            @foreach (var location in Model.FavoriteLocations)
                            {
                                <li>@location.LocationName</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-gray-600">No favorite locations added yet.</p>
                    }
                </div>
                <form method="post" asp-page-handler="Logout" class="mt-6 text-center">
                    <button type="submit" class="py-2 px-6 bg-red-600 text-white rounded-md hover:bg-red-700">
                        Logout
                    </button>
                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    @await Html.PartialAsync("_Footer")
</body>
</html>
