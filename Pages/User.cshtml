@page
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WeatherApp - User</title>
    <link rel="stylesheet" href="css/output.css">
</head>
<body class="flex flex-col min-h-screen bg-gray-100">
    <!-- Header -->
    @await Html.PartialAsync("_Header")

    <!-- Main Content -->
    <main class="flex-grow container mx-auto p-4">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <h1 class="text-3xl font-bold text-center mb-4">Welcome, @User.Identity.Name!</h1>
            <p class="text-center text-gray-700 mb-8">
                Here's your personalized weather dashboard.
            </p>
            <div class="text-center">
                <a href="/" class="text-blue-600 hover:underline">Back to Home</a>
            </div>
        }
        else
        {
            <h1 class="text-3xl font-bold text-center mb-4">You are not logged in!</h1>
            <p class="text-center text-gray-700 mb-8">
                Please <a href="/Account/Login" class="text-blue-600 hover:underline">log in</a> to access your dashboard.
            </p>
        }
    </main>

    <!-- Footer -->
    @await Html.PartialAsync("_Footer")
</body>
</html>
